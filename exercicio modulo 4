        "def extrai_linha_txt(nome_arquivo: str, numero_linha: int):\n",
        "\n",
        "    with open(file=nome_arquivo, mode='r', encoding='utf8') as fp:\n",
        "     linhas = fp.read().splitlines()\n",
        "\n",
        "    return linhas[numero_linha].split()\n",
        "    "
